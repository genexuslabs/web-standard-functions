{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "lib": ["es2021", "dom"],
    "outDir": "./dist/lib",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "src/**/**/*.spec.ts"]
}
